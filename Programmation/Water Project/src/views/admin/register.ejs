<html lang="fr">

<%- include('../partials/head', { title: "Water Project - Création d'un utilisateur" }) %>

<body>

    <div>
        <form method="POST" action="/admin/register">
            
            <h1>Création d'un utilisateur</h1>
            
            <div>
                <label>Nom d'utilisateur :</label>
                <input type="text" name="username" maxlength="20" required>
            </div>
            
            <% if(errors.includes("alreadyExistUsername")) { %><label><strong>Le nom d'utilisateur renseigné est incorrect !</strong></label><br><%}%>
        
            <div>
                <label>Mot de passe :</label>
                <input type="password" name="password" maxlength="20" required>
            </div>

            <div>
                <label>Confirmation :</label>
                <input type="password" name="confirmPassword" maxlength="20" required>
            </div>

            <% if(errors.includes("notSimilar")) { %><label class="red"><strong>Les mots de passe sont différents !</strong></label><br><%}%>

            <div><button type="submit">Enregistrer</button></div>
        </form>
    </div>

</body>

</html>